CXX_STD = CXX11

NO_INLINE=-fno-inline -fno-inline-small-functions -fno-default-inline

# DEBUG_CXXFLAGS+= -D_GLIBCXX_DEBUG -g3 $(NO_INLINE) -O0 -fmax-errors=5  # basic debugging without extra logging

#BGEN_DEBUG += -D DEBUG=1

COMMON_FLAGS=-I. -Iinclude \
-Iinclude/zstd-1.1.0 \
-Iinclude/zstd-1.1.0/common \
-Iinclude/zstd-1.1.0/compress \
-Iinclude/zstd-1.1.0/decompress \
-D SQLITE_ENABLE_COLUMN_METADATA \
-D SQLITE_ENABLE_STAT4 \
-D SQLITE_MAX_EXPR_DEPTH=10000 \
-D SQLITE_USE_URI=1 \
$(BGEN_DEBUG)

PKG_CFLAGS= $(COMPILER_CFLAGS) $(ARCH_SPECIFIC_COMPILER_FLAGS) $(COMMON_FLAGS)

PKG_CXXFLAGS=  \
 $(COMPILER_CXXFLAGS) $(ARCH_SPECIFIC_COMPILER_FLAGS) $(DEBUG_CXXFLAGS) \
 $(COMMON_FLAGS)

PKG_LIBS= $(COMPILER_LDFLAGS) $(ARCH_SPECIFIC_LINKER_FLAGS) $(DEBUG_LDFLAGS)

-include autodep
